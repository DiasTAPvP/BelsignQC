   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label contentDisplay="CENTER" textAlignment="CENTER">
               <font>
                  <Font size="28.0" />
               </font>
            </Label>
            <TextField fx:id="usernameField" alignment="CENTER" maxHeight="55.0" maxWidth="500.0" minHeight="55.0" minWidth="500.0" promptText="Username" styleClass="textfields">
               <VBox.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </VBox.margin>
               <font>
                  <Font size="24.0" />
               </font>
            </TextField>
            <PasswordField fx:id="passwordField" alignment="CENTER" maxHeight="55.0" maxWidth="500.0" minHeight="55.0" minWidth="500.0" promptText="Password" styleClass="textfields">
               <VBox.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </VBox.margin>
               <font>
                  <Font size="24.0" />
               </font>
            </PasswordField>
            <Button fx:id="loginButton1" accessibleRole="IMAGE_VIEW" minHeight="60.0" minWidth="60.0" mnemonicParsing="false" onMouseClicked="#handleLogin" text="LoginButton">
               <effect>
                  <ImageInput>
                     <source>
                        <Image url="@images/circleArrowLogin_icon.png" />
                     </source>
                  </ImageInput>
               </effect>
               <font>
                  <Font size="1.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
   <top>
      <BorderPane BorderPane.alignment="CENTER">
         <left>
            <HBox spacing="15.0" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fitHeight="37.0" fitWidth="44.0">
                     <image>
                        <Image url="@images/belmanLogo.png" />
                     </image>
                  </ImageView>
                  <Text text="Belman" wrappingWidth="91.98307228088379">
                     <font>
                        <Font size="28.0" />
                     </font>
                  </Text>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </left>
      </BorderPane>
   </top>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
